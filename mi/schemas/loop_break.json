{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MI LoopBreak",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "action",
    "confidence",
    "rewritten_next_input",
    "check_intent",
    "ask_user_question",
    "notes"
  ],
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "rewrite_next_input",
        "run_checks_then_continue",
        "stop_done",
        "stop_blocked",
        "ask_user"
      ]
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "rewritten_next_input": { "type": "string" },
    "check_intent": { "type": "string" },
    "ask_user_question": { "type": "string" },
    "notes": { "type": "string" }
  }
}

