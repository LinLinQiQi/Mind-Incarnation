{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MI WorkflowProgress",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "should_update": { "type": "boolean" },
    "completed_step_ids": {
      "type": "array",
      "items": { "type": "string" }
    },
    "next_step_id": { "type": "string" },
    "should_close": { "type": "boolean" },
    "close_reason": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "notes": { "type": "string" }
  },
  "required": [
    "should_update",
    "completed_step_ids",
    "next_step_id",
    "should_close",
    "close_reason",
    "confidence",
    "notes"
  ]
}

